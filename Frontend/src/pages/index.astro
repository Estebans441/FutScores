---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-col items-center justify-center pt-52 space-y-6">
    <button
      class="bg-green-500 text-white py-4 px-8 rounded flex items-center text-lg"
    >
      <Image
        src="/relaciones-publicas.png"
        alt="Publicador"
        class="w-10 h-10 mr-4"
        width="50"
        height="50"
      />
      <a href="/pub"><b>Iniciar como Publicador</b></a>
    </button>
    <button
      class="bg-green-500 text-white py-4 px-8 rounded flex items-center text-lg"
    >
      <Image
        src="/aficionados.png"
        alt="Aficionados"
        class="w-10 h-10 mr-4"
        width="50"
        height="50"
      />
      <a href="/sub"><b>Iniciar como Suscriptor</b></a>
    </button>
  </div>

  <style>
    .button-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      gap: 20px;
    }
  </style>
</Layout>
