---
import { type Match } from "../../types/match.ts";

interface Props {
  key: number;
  match: Match;
  type: string;
}

const { match, type } = Astro.props;
const {
  id,
  homeTeam,
  homeTeamAbbr,
  homeImg,
  awayTeam,
  awayTeamAbbr,
  awayImg,
  date,
  time,
} = match;
---

<li class="link-card">
  <a href={`/${type}/matches/${id}`}>
    <div class="match-info">
      <div class="team">
        <img src={homeImg} alt={homeTeam} class="team-logo" />
        <div class="team-info">
          <span class="team-name">{homeTeam}</span>
          <span class="team-abbr">{homeTeamAbbr}</span>
        </div>
      </div>
      <div class="vs">VS</div>
      <div class="team">
        <img src={awayImg} alt={awayTeam} class="team-logo" />
        <div class="team-info">
          <span class="team-name">{awayTeam}</span>
          <span class="team-abbr">{awayTeamAbbr}</span>
        </div>
      </div>
    </div>
    <div class="match-details">
      <p>Fecha: {date}</p>
      <p>Hora: {time}</p>
    </div>
  </a>
</li>

<style>
  li {
    list-style-type: none;
    padding: 0;
  }

  .link-card {
    background: linear-gradient(
      45deg,
      rgba(30, 116, 30, 0.1),
      rgba(241, 245, 3, 0.05)
    );
    border-radius: 8px;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.1),
      0 0 1px 1px rgba(1, 194, 1, 0.5),
      0 0 2px 2px rgba(255, 255, 0, 0.5); /* Sombra gradiente entre verde y amarillo */
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    padding: 16px;
    margin: 16px 0;
    text-align: center;
    border: none; /* Elimina cualquier borde adicional */
  }
  .link-card:hover {
    transform: translateY(-5px);
    box-shadow:
      0 8px 16px rgba(0, 0, 0, 0.2),
      0 0 5px 5px rgba(1, 194, 1, 0.5),
      0 0 5px 5px rgba(255, 255, 0, 0.5); /* Sombra gradiente más intensa al hacer hover */
  }
  .match-info {
    display: flex;
    align-items: center;
    justify-content: center; /* Centra la información del partido */
  }
  .team {
    display: flex;
    align-items: center;
    flex: 1;
  }
  .team-logo {
    width: 80px; /* Aumenta el tamaño del logo */
    height: 80px; /* Aumenta el tamaño del logo */
    margin-right: 16px; /* Aumenta el margen para mayor separación */
    object-fit: contain; /* Mantiene la proporción de la imagen */
    display: block; /* Permite centrar la imagen */
    margin: auto; /* Centra la imagen */
  }
  .team-info {
    text-align: center;
  }
  .team-name {
    font-weight: bold; /* Nombres en negrita */
    color: #333; /* Tono gris oscuro */
    display: block;
  }
  .team-abbr {
    display: block;
  }
  .vs {
    margin: 0 32px; /* Aumenta el margen para mayor separación */
    font-size: 1.5em; /* Aumenta el tamaño de la fuente */
    font-weight: bold;
    flex: 0 0 100px; /* Asegura que el "vs" tenga un tamaño fijo */
    display: flex;
    align-items: center;
    justify-content: center; /* Centra el "vs" vertical y horizontalmente */
  }
  .match-details {
    margin-top: 16px; /* Aumenta el margen superior */
    font-size: 0.9em; /* Disminuye el tamaño de la fuente */
    color: #555;
  }
</style>
